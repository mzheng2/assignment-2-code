				eZero();
				if (eBank >= win) {
					eWinner();
				}
				sumZero();
				remove();
				if (num == 8) {
					playerOne();
				} else if (num > 8) {
					playerNine();
				}
			}
		}
	}

	private static void playerNine() {
		System.out.println("IT IS PLAYER NINE's TURN.");
		printInfo();
		System.out.println("Press any key to roll.");
		Scanner input = new Scanner(System.in);
		String play = input.nextLine();
		while (playerNine) {
			roll();
			if (list.contains(1)) {
				if (nBank >= win) {
					nWinner();
				} else if (sum == list.size()) {
					System.out.println("You have lost all your banked points.");
					nBankZero();
					oZero();
					tZero();
					thZero();
					fZero();
					fiZero();
					sZero();
					seZero();
					eZero();
					nZero();
					printInfo();
					remove();
					sumZero();
					if (num == 9) {
						playerOne();
					} else {
						playerTen();
					}
				} else {
					System.out
							.println("You have rolled a 1. Your turn is over.");
					tZero();
					oZero();
					thZero();
					fZero();
					fiZero();
					sZero();
					seZero();
					eZero();
					nZero();
					printInfo();
					sumZero();
					remove();
					if (num == 9) {
						playerOne();
					} else if (num > 9) {
						playerTen();
					}
				}
			} else {
				nPoints += sum;
				System.out.println("Player Nine's Current: " + nPoints
						+ " points");
				printInfo();
				if (nBank >= win) {
					nWinner();
				}
				nBank += nPoints;
				tZero();
				oZero();
				thZero();
				fZero();
				fiZero();
				sZero();
				seZero();
				eZero();
				nZero();
				if (nBank >= win) {
					nWinner();
				}
				sumZero();
				remove();
				if (num == 9) {
					playerOne();
				} else if (num > 9) {
					playerTen();
				}
			}
		}
	}

	private static void playerTen() {
		System.out.println("IT IS PLAYER Ten's TURN.");
		printInfo();
		System.out.println("Press any key to roll.");
		Scanner input = new Scanner(System.in);
		String play = input.nextLine();
		while (playerTen) {
			roll();
			if (list.contains(1)) {
				if (teBank >= win) {
					teWinner();
				} else if (sum == list.size()) {
					System.out.println("You have lost all your banked points.");
					teBankZero();
					oZero();
					tZero();
					thZero();
					fZero();
					fiZero();
					sZero();
					seZero();
					eZero();
					nZero();
					teZero();
					printInfo();
					remove();
					sumZero();
					playerOne();
				} else {
					System.out
							.println("You have rolled a 1. Your turn is over.");
					tZero();
					oZero();
					thZero();
					fZero();
					fiZero();
					sZero();
					seZero();
					eZero();
					nZero();
					teZero();
					printInfo();
					playerOne();
					sumZero();
					remove();
				}
			} else {
				tePoints += sum;
				System.out.println("Player Ten's Current: " + tePoints
						+ " points");
				printInfo();
				if (teBank >= win) {
					teWinner();
				}
				teBank += tePoints;
				tZero();
				oZero();
				thZero();
				fZero();
				fiZero();
				sZero();
				seZero();
				eZero();
				nZero();
				teZero();
				if (teBank >= win) {
					teWinner();
				}
				sumZero();
				remove();
				playerOne();
			}
		}
	}

	private static int roll() {
		System.out.println("How many dice would you like to roll: ");
		Scanner nor = new Scanner(System.in);
		number = nor.nextInt();
		Random rand = new Random();
		for (int i = 0; i < number; i++) {
			dice = rand.nextInt(6) + 1;
			list.add(dice);
			sum += list.get(i);
		}
		System.out.println("Your rolls are: ");
		System.out.println(list);
		return sum;
	}

	private static void remove() {
		for (int i = 0; i < number; i++) {
			list.clear();
		}
	}

	private static int sumZero() {
		sum = 0;
		return sum;
