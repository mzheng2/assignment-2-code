	private static void playerOne() {
		System.out.println("IT IS PLAYER ONE'S TURN.");
		printInfo();
		System.out.println("Press press any key to roll.");
		Scanner input = new Scanner(System.in);
		String play = input.nextLine();
		while (playerOne) {
			roll();
			if (list.contains(1)) {
				if (oBank >= win) {
					oWinner();
				} else if (sum == list.size()) {
					System.out.println("You have lost all your banked points.");
					oBankZero();
					oZero();
					tZero();
					printInfo();
					remove();
					sumZero();
					playerTwo();
				} else {
					System.out
							.println("You have rolled a 1. Your turn is over.");
					oZero();
					tZero();
					printInfo();
					remove();
					sumZero();
					playerTwo();
				}
			} else {
				oPoints += sum;
				System.out.println("Player One's Current: " + oPoints
						+ " points");
				printInfo();
				if (oBank >= win) {
					oWinner();
				}
				oBank += oPoints;
				oZero();
				tZero();
				if (oBank >= win) {
					oWinner();
				}
				sumZero();
				remove();
				playerTwo();
			}
		}
	}

